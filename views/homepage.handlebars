

<h2>Welcome coder. We have been waiting for you!</h2>

{{#each posts as |post| }}
<div class="card">
    <div class="card-header">
        <p>Created by {{post.user.name}} on {{format_date date_created}}</p>
    </div>
    <div class="card-body">
        <h5 class="card-title">{{post.title}}</h5>
        <a href="/post/{{post.id}}" class="btn btn-primary">View Post</a>
    </div>
</div>
{{/each}}





